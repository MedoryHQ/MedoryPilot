model Admin {
  id String @id @default(uuid(7)) @db.Uuid

  email        String @unique
  firstName    String
  lastName     String
  passwordHash String

  smsCode          String?
  smsCodeExpiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([firstName, lastName], name: "full_name_index")
  @@map("admins")
}
